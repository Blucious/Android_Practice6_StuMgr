<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="normalButton" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="editButton" parent="normalButton">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/White</item>
    <item name="android:textStyle">bold</item>
  </style>

  <!--list_item_student.xml-->
  <style name="lis_field">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
  </style>

  <!--Definition Item Group-->
  <style name="digp">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:background">@color/White</item>
    <item name="android:paddingVertical">10dp</item>
    <item name="android:paddingHorizontal">10dp</item>
  </style>

  <!--Definition Item-->
  <style name="di">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <!--Definition Item - Larger Margin-->
  <style name="di_lm" parent="di">
    <item name="android:layout_marginTop">10dp</item>
  </style>

  <!--Definition Term/Name-->
  <style name="dt">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">#777</item>
  </style>

  <!--Definition Description -->
  <style name="dd">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">#444</item>
  </style>

  <!--Horizontal Separator-->
  <style name="sep_h">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">#ccc</item>
  </style>

  <!--Vertical Separator-->
  <style name="sep_v">
    <item name="android:layout_width">1dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">#ccc</item>
  </style>

  <!--VHorizontal Separator - Transparent-->
  <style name="sep_h15_tp">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">15dp</item>
  </style>

</resources>